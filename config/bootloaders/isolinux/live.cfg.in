title Boot Options
menu rows 5

label live-@FLAVOUR@
	menu label ^Live System
	menu default
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE@

label live-@FLAVOUR@-RAM
	menu label Live from ^RAM
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE@ toram

label live-@FLAVOUR@-failsafe
	menu label Live ^Failsafe
	linux /live/vmlinuz
	initrd /live/initrd.img
	append boot=live components noapic noapm nodma nomce nolapic nomodeset nosmp nosplash vga=normal nox11autologin timezone=America/New_York

label ---------
menu disable

label memtest
	menu label ^memtest86+
	linux /live/memtest
